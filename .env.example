# Environment Variables Template
# Copy this to .env and fill in your values
# NEVER commit .env to version control!

# === Application Environment ===
APP_ENV=production
# Options: local, staging, production

# === Database Configuration ===
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=project_1
DB_USER=project_1
DB_PASS=YOUR_STRONG_DATABASE_PASSWORD_HERE
DB_CHARSET=utf8mb4

# === Session Configuration ===
SESSION_NAME=analytics_session
SESSION_LIFETIME=86400

# === WebSocket/Match Session Server ===
MATCH_SESSION_PORT=4001
MATCH_SESSION_HOST=0.0.0.0
MATCH_SESSION_ORIGIN=https://yourdomain.com
# Generate with: openssl rand -base64 32
MATCH_SESSION_SECRET=YOUR_STRONG_WEBSOCKET_SECRET_HERE
MATCH_SESSION_WS_URL=wss://yourdomain.com:4001

# WebSocket timing (milliseconds)
MATCH_SESSION_STATE_TICK_MS=1000
MATCH_SESSION_PERSIST_DEBOUNCE_MS=750

# WebSocket behavior flags
MATCH_SESSION_AUTO_CONTROL_ON_ANALYST_JOIN=true
MATCH_SESSION_PAUSE_ON_ANALYST_JOIN=false

# === Phase 3 Features ===
PHASE_3_VIDEO_LAB_ENABLED=true
ANNOTATIONS_ENABLED=true

# === Debugging (DISABLE IN PRODUCTION) ===
DEBUG=false
# Set to 'true' only in local development

# === Rate Limiting ===
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_WINDOW_SECONDS=900

# === Python/FFmpeg Worker Paths ===
VIRTUAL_ENV=/path/to/venv
# If using virtual environment for Python clip worker

# === Security Headers ===
# HSTS max age in seconds (31536000 = 1 year)
HSTS_MAX_AGE=31536000

# === Monitoring/Logging ===
LOG_LEVEL=info
# Options: debug, info, warning, error
